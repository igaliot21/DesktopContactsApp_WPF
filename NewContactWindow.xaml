<Window x:Class="DesktopContactsApp.NewContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactsApp"
        mc:Ignorable="d"
        Title="New Contact" Height="220" Width="250" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Name" FontSize="10"/>
            <TextBox x:Name="txtName"/>
            <Label Content="Email" FontSize="10"/>
            <TextBox x:Name="txtEmail"/>
            <Label Content="Phone" FontSize="10"/>
            <TextBox x:Name="txtPhone" Margin="0,0,0,5" />
            <Button x:Name="btnSave" Content="Save" Click="btnSave_Click"/>
        </StackPanel>
        
    </Grid>
</Window>
